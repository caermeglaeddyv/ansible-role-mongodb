{
  "CN": "{{ mongodb_certs_server_cn }}",
  "key": {
    "algo": "{{ mongodb_certs_server_key_algo }}",
    "size": {{ mongodb_certs_server_key_size }}
  },
  "names": [
  {% for name in mongodb_certs_server_names -%}
  {
    "C": "{{ name.c }}",
    "L": "{{ name.l }}",
    "O": "{{ name.o }}",
    "OU": "{{ name.ou }}"
  }
  {% endfor -%}
  ],
  "hosts": [
    {% if mongodb_certs_server_hosts -%}
    {% for csh in mongodb_certs_server_hosts -%}
    "{{ csh }}",
    {% endfor -%}
    {% else -%}
    {% for server in ansible_play_batch -%}
    "{{ server }}",
    "{{ hostvars[server].ansible_default_ipv4.address }}",
    {% endfor -%}
    {% endif -%}
    "127.0.0.1",
    "localhost"
  ]
}
